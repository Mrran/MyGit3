<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_lane_left_divider"
        android:layout_width="2dp"
        android:layout_height="113dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="@mipmap/icon_other_lane_divider"/>

    <RelativeLayout
        android:id="@+id/rlyt_current_lane"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.flyjingfish.gradienttextviewlib.GradientTextView
            android:id="@+id/gtv_current_lane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="当前车道"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="13sp"
            app:gradient_angle="0"
            app:gradient_endColor="#a7bbe9"
            app:gradient_startColor="#ffffff" />

        <LinearLayout
            android:id="@+id/llyt_all_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/gtv_current_lane"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llyt_item_light0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlyt_light0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/trafficlight_bg_yellow">

                    <ImageView
                        android:id="@+id/iv_light0"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_time0"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/traffic_light_yellow"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_item_light1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlyt_light1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/trafficlight_bg_yellow">

                    <ImageView
                        android:id="@+id/iv_light1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/traffic_light_yellow"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_item_light2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlyt_light2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/trafficlight_bg_yellow">

                    <ImageView
                        android:id="@+id/iv_light2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/traffic_light_yellow"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_item_light3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:visibility="gone"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlyt_light3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/trafficlight_bg_yellow">

                    <ImageView
                        android:id="@+id/iv_light3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_time3"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/traffic_light_yellow"
                    android:textSize="23sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/llyt_all_light"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绿波 "
                android:paddingStart="1dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="italic" />-->

            <TextView
                android:id="@+id/tv_green_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="43dp"
                android:gravity="right"
                android:paddingEnd="1dp"
                android:layout_marginEnd="2dp"
                android:textColor="@color/traffic_light_green"
                android:textSize="13sp"
                android:textStyle="italic|bold" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_lane_right_divider"
        android:layout_width="2dp"
        android:layout_height="113dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:background="@mipmap/icon_other_lane_divider"/>

</androidx.appcompat.widget.LinearLayoutCompat>




