<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clyt_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="1"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginStart="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_parking_id"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:singleLine="false"
        android:layout_marginTop="8dp"
        android:layout_marginStart="53dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="龙湖礼嘉天街-地下停车场"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a6bdf1"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="53dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:text="4元/小时"/>

    <TextView
        android:id="@+id/tv_empty_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a6bdf1"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="138dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:text="空余: 97"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#a6bdf1"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginStart="223dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:text="距离 700m"/>

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_price"
        android:layout_marginTop="7dp"
        android:background="#09152a"/>

    <ImageView
        android:id="@+id/iv_navi"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:padding="11dp"
        android:layout_marginEnd="7dp"
        android:src="@mipmap/icon_navi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
